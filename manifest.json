{
  "manifest_version": 3,
  "name": "ニコニコ視界調整",
  "version": "1.0",
  "description": "ニコニコ動画・生放送（niconico）のコメント表示範囲を自由に調整できます。",
  "homepage_url": "https://github.com/xzrelay/nicoVis",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://www.nicovideo.jp/*",
    "https://live.nicovideo.jp/*"
  ],
  "icons": {
    "16": "/icon/16.png",
    "48": "/icon/48.png",
    "128": "/icon/128.png"
  },
  "action": {
    "default_title": "ニコニコ視界調整",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/icon/16.png",
      "48": "/icon/48.png",
      "128": "/icon/128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.nicovideo.jp/*",
        "https://live.nicovideo.jp/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ]
}
